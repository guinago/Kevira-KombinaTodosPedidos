@model IEnumerable<KeViraKombinaTodos.Web.Models.PedidoModel>

@using GridMvc.Html
@{
    ViewBag.Title = "Entregas_Pedidos";
}
<div class="container">
    <div class="code-cut">
        @Html.Grid(Model).Columns(columns =>
        {
            columns.Add(c => c.PedidoID).Titled("Pedido").Filterable(true).Sortable(true);
            columns.Add(c => c.Vendedor).Titled("Vendedor").Filterable(true).Sortable(true);
            columns.Add(c => c.Cliente).Titled("Cliente").Filterable(true).Sortable(true);
            columns.Add(c => c.Telefone).Titled("Telefone").Filterable(true).Sortable(true);
            columns.Add(c => c.CEP).Titled("CEP").Filterable(true).Sortable(true);
            columns.Add(c => c.DataEntrega).Titled("DataEntrega").Filterable(true).Sortable(true);
            columns.Add(c => c.ValorTotal).Titled("Valor Total").Filterable(true).Sortable(true);
            columns.Add(c => c.Status).Titled("Status Entrega").RenderValueAs(s => s.Status == 0 ? "Pendente" : (s.Status == 1 ? "Entregue" : "Cancelado")).Filterable(true).Sortable(true);

            columns.Add().Encoded(false).Sanitized(false).SetWidth(30)
            .RenderValueAs(o => Html.ActionLink("Detalhes", "Details", new { pedidoID = o.PedidoID }));
        }).WithPaging(10).Sortable(true).EmptyText("Seu filtro não retornou resultados.")
    </div>
</div>