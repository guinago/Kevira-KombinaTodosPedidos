@model KeViraKombinaTodos.Web.Models.CondicaoPagamentoModel

@{
    ViewBag.Title = "Cadastrar Codição de Pagamento";
}
<div class="container">
    <h2>Cadastrar Codição de Pagamento</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.CondPgto, "Condição de Pagamento", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(x => Model.CondPgto, new SelectList(Model.ListCondPgto, "Key", "Value"), htmlAttributes: new { @class = "form-control", id = "Country" })
                    @Html.ValidationMessageFor(model => model.CondPgto, "", new { @class = "text-danger" })
                </div>
            </div>
            <p>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="button" value="Voltar" class="btn btn-warning" onclick="location.href='@Url.Action("Index", "CondicaoPagamento")'; return false;" />
                        <input type="submit" value="Salvar" class="btn btn-primary" />
                    </div>
                </div>
            </p>
        </div>
    }
</div>
