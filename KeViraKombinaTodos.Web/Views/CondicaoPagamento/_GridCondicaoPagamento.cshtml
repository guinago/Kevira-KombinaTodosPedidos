@model IEnumerable<KeViraKombinaTodos.Web.Models.CondicaoPagamentoModel>

<div>
    @{
        var webGrid = new WebGrid(source: Model, defaultSort: "Descricao", canPage: true, rowsPerPage: 10);
    }
    @webGrid.GetHtml(
    htmlAttributes: new { @id = "WebGrid", @class = "Grid" },
        tableStyle:"table table-responsive table-striped table-bordered",
        columns: webGrid.Columns(
            webGrid.Column("Codigo", header: "Código", format: @<text><div class="edit" data-id="@item.CondicaoPagamentoID" data-propertyname="Codigo">@item.Codigo</div></text>),
            webGrid.Column("Descricao", header: "Descrição", format: @<text><div class="edit" data-id="@item.CondicaoPagamentoID" data-propertyname="Descricao">@item.Descricao</div></text>),
            webGrid.Column("DataCriacao", header: "Data criação"),
            webGrid.Column("DataModificacao", header: "Data Modificação"),
            webGrid.Column("Excluir", format: @<text> @Html.ActionLink(linkText: "Excluir", actionName: "Excluir", routeValues: new { condicaoPagamentoID = item.CondicaoPagamentoID })</text>)
        )
    )
</div>
