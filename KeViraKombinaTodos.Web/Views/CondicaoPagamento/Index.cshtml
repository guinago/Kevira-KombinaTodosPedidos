@model IEnumerable<KeViraKombinaTodos.Web.Models.CondicaoPagamentoModel>

@using GridMvc.Html
@{
    ViewBag.Title = "Condição de Pagamento";
}
<div class="container">
    <h2>Condição de Pagamento</h2>

    <div class="code-cut">
        @Html.Grid(Model).Columns(columns => 
       {
           columns.Add(c => c.Descricao).Titled("Descrição").Filterable(true).Sortable(true);
           columns.Add(c => c.DataCriacao).Titled("Data Criação").Filterable(true).Sortable(true);
           columns.Add(c => c.DataModificacao).Titled("Data Modificação").Filterable(true).Sortable(true);
           columns.Add()
                  .Encoded(false)
                  .Sanitized(false)
                  .SetWidth(30)
                  .RenderValueAs(o => Html.ActionLink("Detalhes", "Details", new { condicaoPagamentoID = o.CondicaoPagamentoID}));

       }).WithPaging(10).Sortable(true).EmptyText("Seu filtro não retornou resultados.")
    </div>
    <p>
        <table>
            <tr>
                <td>
                    <input type="button" value="Nova Condição de Pagamento" class="btn btn-primary" onclick="location.href='@Url.Action("Create", "CondicaoPagamento")'; return false;" />
                </td>

            </tr>
        </table>
    </p>
</div>
