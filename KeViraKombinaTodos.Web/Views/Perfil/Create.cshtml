@model KeViraKombinaTodos.Web.Models.PerfilModel

@{
    ViewBag.Title = "Cadastrar Perfil";
}
<div class="container">
    <h2>Cadastrar Perfil</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.Descricao, "Descrição", htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Codigo, "Código", htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Codigo, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.SouTodoPoderoso)
                        @Html.LabelFor(model => model.SouTodoPoderoso, "Posso visualizar Tudo", htmlAttributes: new { @class = "control-label col-md-6" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.SouComprador)
                        @Html.LabelFor(model => model.SouTodoPoderoso, "Posso visualizar meus pedidos", htmlAttributes: new { @class = "control-label col-md-6" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.SouTransportador)
                        @Html.LabelFor(model => model.SouTodoPoderoso, "Pode visualizar minhas entregas", htmlAttributes: new { @class = "control-label col-md-6" })
                    </div>
                </div>
            </div>
            <p>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="Button" value="Voltar" id="btnVoltar" class="btn btn-warning" onClick="location.href='@Url.Action("Index", "Perfil")'; return false;" />
                        <input type="submit" value="Salvar" class="btn btn-primary" />
                    </div>
                </div>
            </p>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}