@model IEnumerable<KeViraKombinaTodos.Web.Models.PerfilModel>

<div>
    @{
        var webGrid = new WebGrid(source: Model, defaultSort: "Descricao", canPage: true, rowsPerPage: 10);
    }
    @webGrid.GetHtml(
    htmlAttributes: new { @id = "WebGrid", @class = "Grid" },
        tableStyle:"table table-responsive table-striped table-bordered",
        columns: webGrid.Columns(
            webGrid.Column("Codigo", header: "Código", format: @<text><div class="edit" data-id="@item.PerfilID" data-propertyname="Codigo">@item.Codigo</div></text>),
            webGrid.Column("Descricao", header: "Descrição", format: @<text><div class="edit" data-id="@item.PerfilID" data-propertyname="Descricao">@item.Descricao</div></text>),
            webGrid.Column("SouTodoPoderoso", header: "Ver todos pedidos", format: @<text> @Html.ActionLink(linkText: (@item.SouTodoPoderoso == true ? "Sim" : "Não"), actionName: ("EditCheckd"), routeValues: new { perfilID = item.PerfilID, propertyName = "SouTodoPoderoso", value = @item.SouTodoPoderoso == true ? 0 : 1 })</text>),
            webGrid.Column("SouComprador", header: "Ver meus pedidos", format: @<text> @Html.ActionLink(linkText: (@item.SouComprador == true ? "Sim" : "Não"), actionName: ("EditCheckd"), routeValues: new { perfilID = item.PerfilID, propertyName = "SouComprador", value = @item.SouComprador == true ? 0 : 1 })</text>),
            webGrid.Column("SouTransportador", header: "Ver minhas entregas", format: @<text> @Html.ActionLink(linkText: (@item.SouTransportador == true ? "Sim" : "Não"), actionName: ("EditCheckd"), routeValues: new { perfilID = item.PerfilID, propertyName = "SouTransportador", value = @item.SouTransportador == true ? 0 : 1 })</text>),
            webGrid.Column("DataCriacao", header: "Data criação"),
            webGrid.Column("DataModificacao", header: "Data Modificação"),
            webGrid.Column("Excluir", format: @<text> @Html.ActionLink(linkText: "Excluir", actionName: "Excluir", routeValues: new { perfilID = item.PerfilID })</text>)
            )
        )
</div>